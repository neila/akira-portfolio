{
  "linter": {
    "enabled": true,
    "ignore": [".next"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [".next"],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
